## Directory shortcuts
alias linux="cd ~/linux"
alias lx="cd ~/linux"
alias websites="cd ~/websites"
alias web="cd ~/websites"
alias misc="cd ~/misc"

## Apache, MySQL, and PHP
alias apachecd="cd /etc/apache2"
alias mysqlcd="cd /etc/mysql"
alias phpcd="cd /etc/php"

alias apacherestart="service apache2 restart"
alias apachestart="service apache2 start"
alias apachestop="service apache2 stop"

alias mysqlrestart="service mysql restart"
alias mysqlstart="service apache2 start"
alias mysqlstop="service apache2 stop"

## Linux
## update downloads package information, install upgrades packages based on updated package data
alias upgrade="apt-get update; apt-get upgrade"

## WordPress
alias wgetwp="wget https://wordpress.org/latest.tar.gz; tar -xzvf latest.tar.gz"